<build>
    <plugins>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-enforcer-plugin</artifactId>
            <version>3.0.0-M3</version> <!-- or the latest version -->
            <executions>
                <execution>
                    <id>enforce-property</id>
                    <goals>
                        <goal>enforce</goal>
                    </goals>
                    <configuration>
                        <rules>
                            <requireSystemProperty>
                                <property>your.system.property</property>
                                <message>You must provide the value for your.system.property</message>
                            </requireSystemProperty>
                            <!-- You can add more rules if needed -->
                        </rules>
                    </configuration>
                </execution>
            </executions>
        </plugin>
    </plugins>
</build>
